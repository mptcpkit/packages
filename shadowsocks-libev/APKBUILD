# Contributor:
# Maintainer:
pkgname=shadowsocks-libev
pkgver=3.3.3
pkgrel=0
pkgdesc="Shadowsocks libev port"
url="https://github.com/Ysurac/shadowsocks-libev"
arch="all"
license="GPL-3.0-only	"
depends="
	mbedtls
	libsodium
	c-ares
	libev
	"
makedepends="
	autoconf
	automake
	libtool
	asciidoc
	xmlto
	"
checkdepends=""
install="$pkgname.pre-install $pkgname.post-install"
subpackages=""
source="
	shadowsocks-libev-$pkgver.tar.gz::https://github.com/Ysurac/shadowsocks-libev/archive/refs/tags/v$pkgver.tar.gz
	shadowsocks-libev.initd
	shadowsocks-libev.confd
	"
builddir="$srcdir/shadowsocks-libev-$pkgver"

build() {
	./autogen.sh
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install

	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname
	install -m644 -D "$srcdir"/$pkgname.confd \
		"$pkgdir"/etc/conf.d/$pkgname
}

